<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/deltaRelative1"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_comment_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        />


    <LinearLayout
        android:id="@+id/linearLayoutJos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Azure"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_comment_detail_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
           />

        <EditText
            android:id="@+id/activity_comment_detail_edit_Text_comment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="  Place comment..."
            android:textSize="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_gravity="center_vertical"
            android:background="@color/fui_transparent"
            android:layout_weight="0.1"
            />

        <Button
            android:id="@+id/activity_comment_detail_button_post"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="14dp"
            android:backgroundTint="@color/fui_transparent"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:text="Post" />


    </LinearLayout>


</RelativeLayout>