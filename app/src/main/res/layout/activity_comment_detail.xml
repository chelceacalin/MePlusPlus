<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deltaRelative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_comment_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp" />


    <LinearLayout
        android:id="@+id/linearLayoutJos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Azure"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_comment_detail_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp" />

        <EditText
            android:id="@+id/activity_comment_detail_edit_Text_comment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.1"
            android:autofillHints=""
            android:background="@color/fui_transparent"
            android:hint="@string/place_comment"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp"
            tools:ignore="TextFields" />

        <Button
            android:id="@+id/activity_comment_detail_button_post"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/fui_transparent"
            android:text="@string/post"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>