<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    tools:context=".ToDo.ToDoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/activity_to_do_close"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5sp"
                android:layout_marginTop="2sp"
                android:background="@drawable/ic_baseline_close"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Plan your day"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:background="@color/Blue"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            +<TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="15sp"
                android:text="Complete All / Delete all"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlSymmetry" />


            <ImageButton
                android:id="@+id/activity_to_do_complete_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_check_24"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <ImageButton
                android:id="@+id/activity_to_do_delete_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="7sp"
                android:background="@drawable/ic_baseline_close"
                tools:ignore="ContentDescription" />
            >

        </LinearLayout>


        <ListView
            android:id="@+id/activity_to_do_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="70sp"
            android:choiceMode="multipleChoice"
            android:cacheColorHint="#00000000"
            android:textColor="#000000"
            />


    </LinearLayout>


    <EditText
        android:id="@+id/actvity_to_do_edittext"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="45sp"
        android:layout_marginBottom="12sp"
        android:autofillHints=""
        android:background="@drawable/maipatratnegru"
        android:paddingStart="15sp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="LabelFor,RtlSymmetry,TextFields" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_to_do_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="5sp"
        android:backgroundTint="@color/CornflowerBlue"
        android:clickable="true"
        android:padding="20sp"
        app:srcCompat="@drawable/ic_baseline_plus"
        tools:ignore="ContentDescription,KeyboardInaccessibleWidget,RelativeOverlap" />


</RelativeLayout>