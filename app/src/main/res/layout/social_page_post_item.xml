<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_blurry_gradient_haikei__1_"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="@drawable/ic_blurry_gradient_haikei__1_"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/social_page_image_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/social_page_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:paddingStart="10sp"
                    android:text="username"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,RtlSymmetry" />
            </LinearLayout>

            <TextView
                android:id="@+id/social_page_image_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#09131E"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:paddingStart="10sp"
                android:textColor="@color/DarkGray"
                android:textStyle="bold|italic"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/social_page_image_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="matrix"
                    tools:ignore="ContentDescription,ImageContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2sp"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/social_page_number_of_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:id="@+id/social_page_like"
                    android:layout_width="25dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/fui_transparent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/social_page_number_of_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:id="@+id/social_page_strike"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/fui_transparent"
                    tools:ignore="ContentDescription,ImageContrastCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/social_page_place_a_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/image_border"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="   Place a comment..."
                android:textColor="#c2c2c2"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>