<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wave__2_"
    android:orientation="vertical"
    tools:context=".ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="605dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/login_form_picture" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginRight="100dp"
                    android:src="@drawable/ic_baseline_lock_reset_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:text="Forgot Password?"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/forgotpassowrd_edit_text_email_recover"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="55dp"
                    android:drawableStart="@drawable/custom_email"
                    android:hint="    Introduce Email"
                    android:inputType="textWebEmailAddress"
                    android:paddingEnd="12dp"
                    android:selectAllOnFocus="false"
                    android:textColor="@color/black"
                    android:textColorHint="#c2c2c2"
                    android:textSize="14dp"
                    android:visibility="visible"
                    tools:visibility="visible" />


                <Button
                    android:id="@+id/forgotpassword_button_send_recovery_email"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="175dp"
                    android:backgroundTint="@color/RoyalBlue"
                    android:hint="Send Recovery Email"
                    android:paddingEnd="12dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#c2c2c2"
                    android:textSize="14dp"
                    app:cornerRadius="20dp" />

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>


</RelativeLayout>