<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Utils.PostActivity"
    android:background="@drawable/ic_blurry_gradient_haikei__1_"
    >


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/postactivity_closeImg"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_baseline_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="0.7"
            android:fontFamily="@font/sabandija"
            android:text="New Post"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/postactivity_rotate_image"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.1"
            android:background="@drawable/ic_baseline_rotate_right_24" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/postactivity_imageProfile"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_add_photo" />

        <Button
            android:id="@+id/postactivity_selectimage"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/DarkBlue"
            android:text="Select Image"
            android:textColor="@color/white"
            app:cornerRadius="15dp" />


        <EditText
            android:id="@+id/postactivity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:hint="  Add Description..."
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp" />


        <Button
            android:id="@+id/postactivity_buttonpost"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/DarkBlue"
            android:text="Upload Post"
            android:textColor="@color/white"
            app:cornerRadius="15dp">


        </Button>


    </LinearLayout>



</RelativeLayout>