<resources>
    <!-- Base application theme. -->
    <style name="Theme.Meplusplus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkSlateGray</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#F4F0F0</item>
        <item name="android:windowBackground">@color/AliceBlue</item>
        <item name="android:itemBackground">@color/PowderBlue</item>
        </style>

    <style name="Theme.Meplusplus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
       <item name="android:itemBackground">#534242</item>
    </style>

    <style name="Theme.Meplusplus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Meplusplus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>